<!-- Header & Tagline -->
<div class="container-fluid">
  <div class="header">
    <h2>GivaLittle</h2>
  	<p id="tagline">Give back what you can, when you can, one small donation at a time. </p> 
  </div> 

<hr>

<% @charities.each do |charity| %>
<div class="well row animated bounceInUp" id="charity-div0">
 <div class="col-xs-8">
   <h4><%= charity.charity_name %></h4>
   <p><%= charity.mission %></p>
 </div>
 <div class="dropdown btn-sm col-xs-4">
<button class="btn btn-warning dropdown-toggle" id="btn-donate" type="button" data-toggle="dropdown">Donate</button>
<ul class="dropdown-menu animated bounceInRight">
  <li>
    <script type="text/javascript"
        src="https://www.simplify.com/commerce/simplify.pay.js"></script>
        <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
        data-name= "<%= charity.charity_name %>"
        data-description="Donating Money to <%= charity.charity_name %>"
        data-reference="99999"
        data-amount="500"
        class="btn btn-warning"
        id="five">
        $5
        </button>
  </li>
  <li>
    <script type="text/javascript" src="https://www.simplify.com/commerce/simplify.pay.js"></script>
        <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
        data-name= "<%= charity.charity_name %>"
        data-description="Donating Money to <%= charity.charity_name %>"
        data-reference="99999"
        data-amount="1000"
        class="btn btn-warning">
        $10
        </button>
  </li>
  <li>
    <script type="text/javascript" src="https://www.simplify.com/commerce/simplify.pay.js"></script>
        <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
        data-name= "<%= charity.charity_name %>"
        data-description="Donating Money to <%= charity.charity_name %>"
        data-reference="99999"
        data-amount="1500"
        class="btn btn-warning">
        $15
        </button>
  </li>
</ul>
</div>
</div>

<% end %>
